@model EmployeeManagement.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2 class="text-center text-danger">Are you sure you want to delete this employee?</h2>

<div class="text-center">
    <h3>@Model.Name</h3>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Position:</strong> @Model.Position</p>
    <p><strong>Salary:</strong> @Model.Salary.ToString("C")</p>

    <form asp-action="Delete" method="post">
        <input asp-for="Id" type="hidden">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Employee" class="btn btn-secondary">Cancel</a>
    </form>
</div>
